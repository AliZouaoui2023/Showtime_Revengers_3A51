{% extends 'Back/base.html.twig' %}

{% block title %}Détails du Film{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ film.NomFilm }}</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ film.id }}</td>
                </tr>
                <tr>
                    <th>Nom du Film</th>
                    <td>{{ film.NomFilm }}</td>
                </tr>
                <tr>
                    <th>Date de Production</th>
                    <td>{{ film.DateProduction ? film.DateProduction|date('Y-m-d') : 'Non spécifiée' }}</td>
                </tr>
                <tr>
                    <th>Réalisateur</th>
                    <td>{{ film.Realisateur }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ film.Genre }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_films_index') }}" class="btn btn-secondary">Retour</a>
        <a href="{{ path('app_films_edit', {'id': film.id}) }}" class="btn btn-primary">Modifier</a>

        {{ include('films/_delete_form.html.twig') }}
    </div>
{% endblock %}
