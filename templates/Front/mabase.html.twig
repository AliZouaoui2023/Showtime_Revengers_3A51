<div class="main-content">
<br></br><br></br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Ajoutez Demande</h1>
            </div>
            <div class="card-body">
                <div class="form-container">
                    {{ form_start(form) }}
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Nbr jours</label>
                        {{ form_widget(form.nbrJours, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Description</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Type</label>
                        {{ form_widget(form.type, {
                            'attr': {'class': 'form-select'},
                            'choices': {
                                'Sélectionner un type': '',
                                'Footer Web': 'footerWeb',
                                'Intégrer Film': 'integrefilm',
                                'Backdrop': 'backdrop'
                            },
                            'required': true
                        }) }}
                    </div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Lien supp</label>
                        {{ form_widget(form.lienSupp, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    {# Champ statut caché avec valeur par défaut en_attente #}
                    {{ form_widget(form.statut, {
                        'attr': {'style': 'display: none'},
                        'value': 'en_attente'
                    }) }}
                    
                    {# Champs cachés avec valeurs par défaut #}
                    {{ form_widget(form.dateSoumission, {
                        'attr': {'style': 'display: none'},
                        'value': "now"|date("Y-m-d H:i:s")
                    }) }}

                    {{ form_widget(form.user, {
                        'attr': {'style': 'display: none'},
                        'value': 3
                    }) }}

                    {{ form_widget(form.admin, {
                        'attr': {'style': 'display: none'},
                        'value': 1
                    }) }}
                    
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
