{% extends 'Back/base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}

    <div class="container mt-4">
    <h1 class="card-title mb-3 text-center">üõçÔ∏èListe des Produits</h1>

    <div class="card shadow-sm p-4">

                <div class="table-responsive">
                    {% if produits is not empty %}
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Prix (TND)</th>
                                    <th>Cat√©gorie</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for produit in produits %}
                                    <tr>
                                        <td>{{ produit.id }}</td>
                                        <td>{{ produit.nom }}</td>
                                        <td>{{ produit.prix|number_format(2, '.', ',') }}</td>
                                        <td>{{ produit.categorie }}</td>
                                        <td>{{ produit.description|slice(0, 50) ~ '...' }}</td>
                                        <td>
                                            {% if produit.image %}
                                                <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" width="80">
                                            {% else %}
                                                <span class="text-muted">Aucune image</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ produit.date ? produit.date|date("d/m/Y H:i") : 'Non sp√©cifi√©e' }}</td>
                                        <td>
                                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-info">Afficher</a>
                                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                            {{ include('produit/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="text-center text-muted">Aucun produit trouv√©.</p>
                    {% endif %}
                </div>


                    <a href="{{ path('app_produit_new') }}" class="btn btn-primary">Cr√©er un nouveau produit</a>
                

            </div>
        </div>
    </div>

{% endblock %}
