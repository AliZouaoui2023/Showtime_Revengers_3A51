                    {% else %}
                        <span class="text-muted">Aucune image disponible</span>
                    {% endif %}
                </div>
            </div>

            <!-- DÃ©tails du produit -->
            <div class="col-md-7 col-sm-12">
                <div class="product-details p-4 rounded shadow-sm bg-white">
                    <h1 class="product-title text-dark fw-bold text-uppercase">{{ produit.nom }}</h1>
                    <p class="product-category text-muted"><strong>CatÃ©gorie :</strong> {{ produit.categorie }}</p>
                    <p class="product-price text-success fw-bold"><strong>Prix :</strong> {{ produit.prix }} TND</p>
