{% extends 'Back/base.html.twig' %}

{% block title %}Ajouter une salle{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="d-flex justify-content-center align-items-center min-vh-75"> 
    <div class="col-md-6 col-lg-5 grid-margin stretch-card">  
        <div class="card shadow-lg p-4 w-100">  
<h4 class="text-center    mt-5 mb-4 fw-bold fs-3">Ajouter une salle</h4>
                 {# Afficher les messages flash #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {# Début du formulaire #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        {# Champ Nom de la salle #}
                        <div class="form-group mb-3">
    {{ form_label(form.nom_salle, 'Nom de la salle', { 'label_attr': {'class': 'form-label'} }) }}
    {{ form_widget(form.nom_salle, { 'attr': {'class': 'form-control w-100', 'placeholder': 'Entrez le nom de la salle'} }) }}
    {% if form.nom_salle.vars.errors|length > 0 %}
        <div class="text-danger">
            {% for error in form.nom_salle.vars.errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
</div>







                        

                      <div class="form-group mb-3">
    <label class="form-label d-block text-white">Disponibilité</label>
    <div class="btn-group w-100" role="group">
        {% for choice in form.disponibilite %}
            {{ form_widget(choice, { 'attr': {'class': 'btn-check', 'id': choice.vars.id} }) }}
            {{ form_label(choice, choice.vars.label, { 'label_attr': {'class': 'btn btn-outline-light px-4', 'for': choice.vars.id} }) }}
        {% endfor %}
    </div>
    {{ form_errors(form.disponibilite) }}
</div>


                        {# Champ Type de la salle #}
                        <div class="form-group mb-3">
                            {{ form_label(form.type_salle, 'Type de la salle', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.type_salle, { 'attr': {'class': 'form-control w-100'} }) }}
                            {{ form_errors(form.type_salle) }}
                        </div>

                        {# Champ Nombre de places #}
                        <div class="form-group mb-3">
                            {{ form_label(form.nombre_de_place, 'Nombre de places', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.nombre_de_place, { 'attr': {'class': 'form-control w-100', 'placeholder': 'Entrez le nombre de places'} }) }}
                            {{ form_errors(form.nombre_de_place) }}
                        </div>

                        {# Champ Statut de la salle #}
                        <div class="form-group mb-3">
                            {{ form_label(form.statut, 'Statut de la salle', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.statut, { 'attr': {'class': 'form-control w-100'} }) }}
                            {{ form_errors(form.statut) }}
                        </div>

                        {# Champ Emplacement #}
                        <div class="form-group mb-3">
                            {{ form_label(form.emplacement, 'Emplacement', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.emplacement, { 'attr': {'class': 'form-control w-100'} }) }}
                            {{ form_errors(form.emplacement) }}
                        </div>

                        {# Boutons de soumission #}
                        
                            <button type="submit" class="btn btn-primary btn-lg w-48">Ajouter</button>
                            <button type="button" class="btn btn-dark btn-lg w-48" onclick="window.location.href='{{ path('app_salle_index') }}'">Annuler</button>
                     
                       
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
