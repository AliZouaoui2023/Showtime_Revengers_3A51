{% extends 'Back/base.html.twig' %}

{% block title %}Statistiques des Cours{% endblock %}

{% block body %}
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <div style="width: 300px; height: 300px; margin: auto;">
        <canvas id="coursChart"></canvas>
    </div>

    <script>
        var ctx = document.getElementById('coursChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: {{ typesCour|json_encode|raw }},  // Utilisez json_encode pour formater correctement les labels
                datasets: [{
                    label: 'Nombre de Cours',
                    data: {{ counts|json_encode|raw }},  // Utilisez json_encode pour formater correctement les donn√©es
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',  
                        'rgba(54, 162, 235, 0.6)',  
                        'rgba(255, 206, 86, 0.6)',  
                        'rgba(75, 192, 192, 0.6)',  
                        'rgba(153, 102, 255, 0.6)', 
                        'rgba(255, 159, 64, 0.6)'   
                    ],
                    borderColor: 'rgba(255, 255, 255, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
{% endblock %}
