{% block title %}My Account{% endblock %}

{% block body %}
    <style>
        /* Global styles */
        body {
            background-image: url('/Front/images/uploads/slider-bg.jpg'); /* Add your background image path */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full viewport height */
        }

        /* Account container */
        .account-container {
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        /* Heading */
        .account-container h1 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #333;
        }

        /* Account details */
        .account-details {
            text-align: left;
            margin-bottom: 20px;
        }

        .account-details p {
            font-size: 16px;
            margin: 10px 0;
            color: #555;
        }

        .account-details strong {
            color: #333;
        }

        /* Photo box */
        .photo-box {
            width: 150px; /* Set the width of the box */
            height: 150px; /* Set the height of the box */
            border: 2px solid #ccc; /* Add a border */
            border-radius: 10px; /* Rounded corners */
            overflow: hidden; /* Ensure the image stays within the box */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f9f9f9; /* Background color for the box */
            margin: 0 auto 20px; /* Center the box and add space below */
        }

        /* Profile photo */
        .profile-photo {
            width: 100%; /* Make the image fill the box */
            height: 100%; /* Make the image fill the box */
            object-fit: cover; /* Ensure the image covers the box without distortion */
        }

        /* No photo available message */
        .photo-box p {
            margin: 0;
            font-style: italic;
            color: #888;
        }

        /* Edit Profile link */
        .edit-profile-link {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff; /* Blue background */
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .edit-profile-link:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        /* Logout button */
        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>

    <div class="account-container">
        <h1>My Account</h1>

        <div class="account-details">
            <!-- Display the user's photo inside a styled box -->
            <div class="photo-box">
                {% if user.photo %}
                    <img src="{{ asset('Back/images/' ~ user.photo) }}" alt="User Photo" class="profile-photo" />
                {% else %}
                    <p>No photo available</p>
                {% endif %}
            </div>

            <p><strong>Email:</strong> {{ user.email }}</p>
            <p><strong>Name:</strong> {{ user.Nom }}</p>
            <p><strong>Role:</strong> {{ user.role }}</p>
        </div>

        <a href="{{ path('frontend_user_edit', {'id': user.id}) }}" class="edit-profile-link">Edit</a>
        <form action="{{ path('app_logout') }}" method="post" style="margin-top: 20px;">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
{% endblock %}